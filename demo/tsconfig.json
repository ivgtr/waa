{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "paths": {
      "waa": ["../src/index.ts"],
      "waa/*": ["../src/*"]
    }
  },
  "include": ["src/**/*.ts", "vite.config.ts"]
}
